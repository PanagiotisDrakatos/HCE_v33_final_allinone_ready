{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "EliteAgentContract",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "plan",
    "patches",
    "verification",
    "risks",
    "commit",
    "handoff"
  ],
  "properties": {
    "plan": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "patches": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "file",
          "diff"
        ],
        "properties": {
          "file": {
            "type": "string"
          },
          "diff": {
            "type": "string",
            "description": "unified diff only"
          }
        }
      }
    },
    "verification": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "commands",
        "expected",
        "results"
      ],
      "properties": {
        "commands": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "expected": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "results": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "commit": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type",
        "scope",
        "summary"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "feat",
            "fix",
            "refactor",
            "perf",
            "test",
            "chore",
            "docs",
            "revert"
          ]
        },
        "scope": {
          "type": "string"
        },
        "summary": {
          "type": "string"
        }
      }
    },
    "handoff": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "next_role",
        "artifacts"
      ],
      "properties": {
        "next_role": {
          "type": "string"
        },
        "artifacts": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}